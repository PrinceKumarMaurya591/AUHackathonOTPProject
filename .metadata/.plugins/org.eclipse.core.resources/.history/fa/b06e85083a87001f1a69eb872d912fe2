otp.api.channel=WEB // or MOBILE or API, depending on your application context
otp.api.otptype=NUMERIC // or ALPHANUMERIC depending on the type of OTP you want (numeric or a mix of characters)
otp.api.timeout=300 // Timeout duration in seconds, e.g., 300 seconds (5 minutes)
